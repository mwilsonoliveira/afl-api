generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Companies {
  company_id String      @id @default(uuid())
  nickname   String
  trade_name String
  legal_name String
  cnpj       String
  uf         String
  city       String
  logo       String?
  Contracts  Contracts[]
}

model Contracts {
  contract_id    String    @id @default(uuid())
  effective_date DateTime
  sign_date      DateTime
  contract_tax   Float
  company        Companies @relation(fields: [company_id], references: [company_id])
  company_id     String
  service_id     String
  service        Services  @relation(fields: [service_id], references: [service_id])
}

model Departments {
  department_id       String                @id @default(uuid())
  name                String
  DepartmentsServices DepartmentsServices[]
}

model Services {
  service_id          String                @id @default(uuid())
  name                String
  Contracts           Contracts[]
  DepartmentsServices DepartmentsServices[]
}

model DepartmentsServices {
  department_id String
  service_id    String
  department    Departments @relation(fields: [department_id], references: [department_id])
  service       Services    @relation(fields: [service_id], references: [service_id])

  @@unique([department_id, service_id])
}
