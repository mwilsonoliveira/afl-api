generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Companies {
  company_id String      @id @default(uuid())
  nickname   String
  trade_name String
  legal_name String
  cnpj       String
  uf         String
  city       String
  logo       String
  Contracts  Contracts[]
}

model Contracts {
  contract_id    String        @id @default(uuid())
  value          Float
  status         String
  effective_date DateTime
  sign_date      DateTime
  contract_tax   Float
  company        Companies     @relation(fields: [company_id], references: [company_id])
  company_id     String
  departments    Departments[] // Array de departamentos com serviços
}

model Departments {
  department_id String     @id @default(uuid())
  name          String
  services      Services[] // Array de serviços associados ao departamento
  Contracts     Contracts  @relation(fields: [contracts_id], references: [contract_id])
  contracts_id  String
}

model Services {
  service_id     String      @id @default(uuid())
  name           String
  Departments    Departments @relation(references: [department_id], fields: [departments_id])
  departments_id String
}
